<Controls:NExampleBaseUC x:Class="Nevron.Examples.Chart.Wpf.NIndicatorValueDampeningUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
			 xmlns:Controls="clr-namespace:Nevron.Examples.Chart.Wpf" 		 
             mc:Ignorable="d" 
             d:DesignHeight="540" d:DesignWidth="300">
    <StackPanel>
        <CheckBox Name="EnableValueDampeningCheckBox" Click="EnableValueDampeningCheckBox_Checked"  Content="Enable Value Dampening" />
        <DockPanel>
            <Label Content="Interval:" Name="Lable1" HorizontalAlignment="Left" Height="28" />
            <ComboBox Name="DampeningIntervalComboBox" SelectionChanged="DampeningIntervalComboBox_SelectionChanged"  Height="24" HorizontalAlignment="Stretch"  />
        </DockPanel>
        <DockPanel>
            <Label Content="Steps:" Name="Lable2" HorizontalAlignment="Left" Height="28" />
            <ComboBox Name="DampeningStepsComboBox" SelectionChanged="DampeningStepsComboBox_SelectionChanged"  Height="24" HorizontalAlignment="Stretch"  />
        </DockPanel>        
        <Button Name="StartStopTimerButton" Click="StartStopTimerButton_Click" Content="Stop Timer" />
    </StackPanel>
</Controls:NExampleBaseUC>