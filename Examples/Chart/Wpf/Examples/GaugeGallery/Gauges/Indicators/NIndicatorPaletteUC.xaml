<Controls:NExampleBaseUC x:Class="Nevron.Examples.Chart.Wpf.NIndicatorPaletteUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
			 xmlns:Controls="clr-namespace:Nevron.Examples.Chart.Wpf" 		 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <StackPanel>
		<CheckBox Name="EnableIndicatorPaletteCheckBox" Click="EnableIndicatorPaletteCheckBox_Checked"  Content="Enable Indicator Palette" />
		<Label Content="Palette Spread Mode:" Name="Lable1" HorizontalAlignment="Left" Height="28" />
		<ComboBox Name="PaletteSpreadModeComboBox" SelectionChanged="PaletteSpreadModeComboBox_SelectionChanged"  Height="24" HorizontalAlignment="Stretch"  />
		<Label Content="Indicators Value:" Height="28" Name="label2" />
		<ScrollBar Height="13" Minimum="0" Maximum="100" Name="IndicatorsValueScrollBar" Orientation="Horizontal" ValueChanged="IndicatorsValueScrollBar_ValueChanged" />
    </StackPanel>
</Controls:NExampleBaseUC>
