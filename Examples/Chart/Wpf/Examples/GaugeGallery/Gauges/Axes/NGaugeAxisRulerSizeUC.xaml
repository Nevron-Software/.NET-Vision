<Controls:NExampleBaseUC x:Class="Nevron.Examples.Chart.Wpf.NGaugeAxisRulerSizeUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
			 xmlns:Controls="clr-namespace:Nevron.Examples.Chart.Wpf" 		 
             mc:Ignorable="d" 
             d:DesignHeight="540" d:DesignWidth="300">
    <StackPanel>
        <Label Name="Label1" Content="Red Axis Percent:" />
        <DockPanel>
            <ScrollBar Orientation="Horizontal" Name="RedAxisPercentScrollBar" ValueChanged="RedAxisPercentScrollBar_ValueChanged"
                       Value="70" Minimum="10" Maximum="70" Width="170" HorizontalAlignment="Stretch"
                       SmallChange="1" LargeChange="10"/>
            <TextBox Name="RedAxisTextBox" HorizontalAlignment="Left" Width="100" IsReadOnly="True" />
        </DockPanel>
    </StackPanel>
</Controls:NExampleBaseUC>
