<Controls:NRealTimeExampleBaseUC x:Class="Nevron.Examples.Chart.Wpf.NRealTimeSurfaceUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
			 xmlns:Controls="clr-namespace:Nevron.Examples.Chart.Wpf" 		 
             mc:Ignorable="d" 
             d:DesignHeight="431" d:DesignWidth="315">
    <StackPanel>
		<Button Content="Stop Timer" Margin="4" Height="23" Name="StartStopTimerButton" Click="StartStopTimerButton_Click" />

		<Label Content="Palette Mode:" Margin="4" Height="28" Name="label1" />
		<ComboBox Height="23" Margin="4" Name="paletteModeCombo" SelectionChanged="PaletteModeCombo_SelectionChanged" />

		<Label Content="Palette Steps:" Margin="4" Height="28" Name="label2" />
		<ComboBox Height="23" Margin="4" Name="paletteStepsCombo" SelectionChanged="PaletteModeCombo_SelectionChanged" />

		<CheckBox Content="Smooth Palette" Height="16" Name="smoothPaletteCheck" Click="SmoothPaletteCheck_Click"/>
	</StackPanel>
</Controls:NRealTimeExampleBaseUC>
