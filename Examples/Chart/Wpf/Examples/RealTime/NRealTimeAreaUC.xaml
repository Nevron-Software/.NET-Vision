<Controls:NRealTimeExampleBaseUC x:Class="Nevron.Examples.Chart.Wpf.NRealTimeAreaUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
			 xmlns:Controls="clr-namespace:Nevron.Examples.Chart.Wpf" 		 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <StackPanel>
		<CheckBox Content="Use Hardware Acceleration" Margin="4" Height="16" Name="UseHardwareAccelerationCheckBox" Click="UseHardwareAccelerationCheckBox_Checked" />
		<Button Content="Stop Timer" Margin="4" Height="23" Name="StartStopTimerButton" Click="StartStopTimerButton_Click" />
		<Button Content="Reset" Margin="4" Height="23" Name="ResetButton" Click="ResetButton_Click" />
		<Label Content="Number of Data Points:" Height="28" Name="label1" />
		<ComboBox Height="23" Margin="4" Name="NumberOfDataPointsComboBox" SelectionChanged="NumberOfDataPointsComboBox_SelectionChanged" />
		<Label Content="New Data Points Per Tick:" Height="28" Name="label2" />
		<ComboBox Height="23" Margin="4" Name="NewDataPointsPerTickComboBox" SelectionChanged="NewDataPointsPerTickComboBox_SelectionChanged" />
		
	</StackPanel>
</Controls:NRealTimeExampleBaseUC>
