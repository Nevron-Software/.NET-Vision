<Controls:NExampleBaseUC x:Class="Nevron.Examples.Chart.Wpf.NLargeSurfaceUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
			 xmlns:Controls="clr-namespace:Nevron.Examples.Chart.Wpf" 		 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <StackPanel>
		<CheckBox Content="Use Hardware Acceleration" Margin ="4" Height="16" Name="UseHardwareAccelerationCheckBox" Checked="UseHardwareAccelerationCheckBox_Checked" />
		<Label Content="Surface Size:" Height="28" Name="label1" />
		<ComboBox Height="23" Name="SurfaceSizeComboBox" SelectionChanged="SurfaceSizeComboBox_SelectionChanged" />
		<Label Content="Fill Mode:" Height="28" Name="label2" />
		<ComboBox Height="23" Name="FillModeComboBox" SelectionChanged="FillModeComboBox_SelectionChanged" />
	</StackPanel>
</Controls:NExampleBaseUC>
