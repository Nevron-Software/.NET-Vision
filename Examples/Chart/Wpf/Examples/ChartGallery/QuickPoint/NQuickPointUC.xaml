<Controls:NExampleBaseUC x:Class="Nevron.Examples.Chart.Wpf.NQuickPointUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
			 xmlns:Controls="clr-namespace:Nevron.Examples.Chart.Wpf" 		 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <StackPanel>
		<Label Content="Max Point Count:" Height="28" Name="label1" />
		<ComboBox Height="23" Name="MaxPointCountComboBox" SelectionChanged="MaxPointCountComboBox_SelectionChanged"/>
        <Button Name ="ChangeDataButton" Content="Change Data" Click="ChangeDataButton_Click" />
		<CheckBox Content="Use Hardware Acceleration" Height="16" Name="UseHardwareAccelerationCheckBox" Checked="UseHardwareAccelerationCheckBox_Checked"/>
		<CheckBox Content="Enable 3D" Height="16" Name="Enable3DCheckBox" Checked="Enable3DCheckBox_Checked"/>
	</StackPanel>
</Controls:NExampleBaseUC>
