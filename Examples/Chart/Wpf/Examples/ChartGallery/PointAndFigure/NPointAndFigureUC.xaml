<Controls:NExampleBaseUC x:Class="Nevron.Examples.Chart.Wpf.NPointAndFigureUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
			 xmlns:Controls="clr-namespace:Nevron.Examples.Chart.Wpf" 		 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <StackPanel>
		<CheckBox Content="Proportional X" Margin ="4" Height="16" Name="ProportionalXCheckBox" Click="ProportionalXCheckBox_Checked" />
		<CheckBox Content="Proportional Y" Margin ="4" Height="16" Name="ProportionalYCheckBox" Click="ProportionalYCheckBox_Checked" />
		<Label Content="Box Size:" Height="28" Name="label1" />
		<ComboBox Height="23" Name="BoxSizeComboBox" SelectionChanged="BoxSizeComboBox_SelectionChanged" />
		<Label Content="Reversal Amount:" Height="28" Name="label2" />
		<ComboBox Height="23" Name="ReversalAmountComboBox" SelectionChanged="ReversalAmountComboBox_SelectionChanged" />
	</StackPanel>
</Controls:NExampleBaseUC>
