<Controls:NExampleBaseUC x:Class="Nevron.Examples.Chart.Wpf.NFinancialChartUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
			 xmlns:Controls="clr-namespace:Nevron.Examples.Chart.Wpf" 		 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <StackPanel>
		<Label Content="Candle Style:" Height="28" Name="label1" />
		<ComboBox Height="23" Name="CandleStyleComboBox" SelectionChanged="CandleStyleComboBox_SelectionChanged" />

		<CheckBox Content="Show Simple Moving Average" Margin ="4" Height="16" Name="ShowSimpleMovingCheckBox" Click="ShowSimpleMovingCheckBox_Checked" />
		<CheckBox Content="Show Bollinger Bands" Margin ="4" Height="16" Name="ShowBollingerBandsCheckBox" Click="ShowBollingerBandsCheckBox_Checked" />
	</StackPanel>
</Controls:NExampleBaseUC>
