<Controls:NExampleBaseUC x:Class="Nevron.Examples.Chart.Wpf.NStandardPointUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
			 xmlns:Controls="clr-namespace:Nevron.Examples.Chart.Wpf" 		 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <StackPanel>
		<Label Content="Point Shape:" Height="28" Name="label1" />
		<ComboBox Height="23" Name="PointShapeComboBox" SelectionChanged="PointShapeComboBox_SelectionChanged" />

		<Label Content="Point Size:" Height="28" Name="label2" />
		<ScrollBar Height="13" Name="PointSizeScrollBar" Orientation="Horizontal" ValueChanged="PointSizeScrollBar_ValueChanged" />

		<CheckBox Content="Inflate Margins" Height="16" Name="InflateMarginsCheckBox" Click="InflateMarginsCheckBox_Checked" />
		<CheckBox Content="Left Axis Round To Tick" Height="16" Name="LeftAxisRoundToTickCheckBox" Click="LeftAxisRoundToTickCheckBox_Checked" />
		<CheckBox Content="Different Colors" Height="16" Name="DifferentColorsCheckBox" Click="DifferentColorsCheckBox_Checked" />
	</StackPanel>
</Controls:NExampleBaseUC>
