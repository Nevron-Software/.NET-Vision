<Controls:NExampleBaseUC x:Class="Nevron.Examples.Chart.Wpf.NStackedLineUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
			 xmlns:Controls="clr-namespace:Nevron.Examples.Chart.Wpf" 		 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <StackPanel>
		<Label Content="Stack Mode:" Height="28" x:Name="label1" />
		<ComboBox Height="23" x:Name="StackModeComboBox" SelectionChanged="StackModeComboBox_SelectionChanged" />
		<CheckBox Content="Show Data Labels" Margin ="4,4,1,4" Height="16" x:Name="ShowDataLabelsCheckBox" Click="ShowDataLabelsCheckBox_Click"/>
		<CheckBox Content="Enable 3D" Margin ="4,4,1,4" Height="16" x:Name="Enable3DCheckBox" Click="Enable3DCheckBox_Click"/>
		<Button Margin ="4" Content="Positive Values" Height="23" x:Name="PositiveValuesButton" Click="PositiveValuesButton_Click"/>
		<Button Margin ="4" Content="Positive and Negative Values" Height="23" x:Name="PositiveAndNegativeValuesButton" Click="PositiveAndNegativeValuesButton_Click" />
	</StackPanel>
</Controls:NExampleBaseUC>
