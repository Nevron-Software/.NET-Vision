<Controls:NExampleBaseUC x:Class="Nevron.Examples.Chart.Wpf.NShapeUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
			 xmlns:Controls="clr-namespace:Nevron.Examples.Chart.Wpf" 		 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <StackPanel>
		<Label Content="Shape:" Height="28" Name="label1" />
		<ComboBox Height="23" Name="ShapeComboBox" SelectionChanged="ShapeComboBox_SelectionChanged" />
		<CheckBox Content="Use X Values" Height="16" Name="UseXValuesCheckBox" Click="UseXValuesCheckBox_Checked" />
		<CheckBox Content="Use Z Values" Height="16" Name="UseZValuesCheckBox" Click="UseZValuesCheckBox_Checked" />
		<CheckBox Content="Different Colors" Height="16" Name="DifferentColorsCheckBox" Click="DifferentColorsCheckBox_Checked" />
	</StackPanel>
</Controls:NExampleBaseUC>
