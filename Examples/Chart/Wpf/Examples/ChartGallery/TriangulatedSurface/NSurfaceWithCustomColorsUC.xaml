<Controls:NExampleBaseUC x:Class="Nevron.Examples.Chart.Wpf.NSurfaceWithCustomColorsUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
			 xmlns:Controls="clr-namespace:Nevron.Examples.Chart.Wpf" 		 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <StackPanel>
		<Label Content="Fill Mode:" Height="28" Name="label1" />
		<ComboBox Height="23" Name="fillModeCombo" SelectionChanged="FillModeCombo_SelectionChanged" />

		<Label Content="Frame Mode:" Height="28" Name="label2" />
		<ComboBox Height="23" Name="frameModeCombo" SelectionChanged="FrameModeCombo_SelectionChanged" />

		<Label Content="Frame Color Mode:" Height="28" Name="label3" />
		<ComboBox Height="23" Name="frameColorModeCombo" SelectionChanged="FrameColorModeCombo_SelectionChanged" />

		<CheckBox Content="Smooth Shading" Height="16" Name="smoothShadingCheck" Click="SmoothShadingCheck_Clicked" />
	</StackPanel>
</Controls:NExampleBaseUC>
