<Controls:NExampleBaseUC x:Class="Nevron.Examples.Chart.Wpf.NMeshSurfaceTextureZoningUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
			 xmlns:Controls="clr-namespace:Nevron.Examples.Chart.Wpf" 		 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <StackPanel>
		<Label Content="Palette Mode:" Height="28" Name="label1" />
		<ComboBox Height="23" Name="paletteModeCombo" SelectionChanged="PaletteModeCombo_SelectionChanged" />

		<Label Content="Palette Steps:" Height="28" Name="label2" />
		<ComboBox Height="23" Name="paletteStepsCombo" SelectionChanged="PaletteStepsCombo_SelectionChanged" />

		<CheckBox Content="Smooth Palette" Height="16" Name="smoothPaletteCheck" Click="SmoothPaletteCheck_Clicked" />
	</StackPanel>
</Controls:NExampleBaseUC>
