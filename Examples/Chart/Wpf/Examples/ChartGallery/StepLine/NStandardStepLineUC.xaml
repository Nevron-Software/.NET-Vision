<Controls:NExampleBaseUC x:Class="Nevron.Examples.Chart.Wpf.NStandardStepLineUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
			 xmlns:Controls="clr-namespace:Nevron.Examples.Chart.Wpf" 		 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <StackPanel>
		<Label Content="Line Style:" Height="28" Name="label1" />
		<ComboBox Height="23" Name="LineStyleComboBox" SelectionChanged="LineStyleComboBox_SelectionChanged" />
		<Label Content="Line Depth:" Height="28" Name="label2" />
		<ScrollBar Height="13" Name="LineDepthScrollBar" Orientation="Horizontal" ValueChanged="LineDepthScrollBar_ValueChanged" />
		<Label Content="Line Size:" Height="28" Name="label3" />
		<ScrollBar Height="13" Name="LineSizeScrollBar" Orientation="Horizontal" ValueChanged="LineSizeScrollBar_ValueChanged_1" />
		<CheckBox Content="Inflate Margins" Height="16" Name="InflateMarginsCheckBox" Checked="InflateMarginsCheckBox_Checked" />
		<CheckBox Content="Left Axis Round To Tick" Height="16" Name="LeftAxisRoundToTickCheckBox" Checked="LeftAxisRoundToTickCheckBox_Checked" />
	</StackPanel>
</Controls:NExampleBaseUC>
