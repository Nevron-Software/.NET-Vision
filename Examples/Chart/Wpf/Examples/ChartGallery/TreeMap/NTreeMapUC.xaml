<Controls:NExampleBaseUC x:Class="Nevron.Examples.Chart.Wpf.NTreeMapUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
			 xmlns:Controls="clr-namespace:Nevron.Examples.Chart.Wpf" 		 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <StackPanel>
		<Label Content="Vertical Fill Mode:" Height="28" Name="label1" />
		<ComboBox Height="23" Name="VerticalFillModeComboBox" SelectionChanged="VerticalFillModeComboBox_SelectionChanged" />
		
		<Label Content="Horizontal Fill Mode:" Height="28" Name="label2" />
		<ComboBox Height="23" Name="HorizontalFillModeComboBox" SelectionChanged="HorizontalFillModeComboBox_SelectionChanged" />

		<Label Content="Color Fill Mode:" Height="28" Name="label3" />
		<ComboBox Height="23" Name="ColorFillModeComboBox" SelectionChanged="ColorFillModeComboBox_SelectionChanged" />
	</StackPanel>
</Controls:NExampleBaseUC>
